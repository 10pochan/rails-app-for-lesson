<div id="tweets-content">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 left-content">

      <!-- singed_in?で制御かける -->
        <% if signed_in? %>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="user">
                <span class="user-name">
                <!-- emailの表示 -->
                  <%= current_user.email %>
                </span>
              </div>
                
              <div class="user-activity">
                <div class="row">
                  <div class="col-xs-12 tweets-num">
                    <div class="text">
                      つぶやき
                    </div>
                    <div class="num">
                      <!-- count使って数字だす -->
                      <%= current_user.tweets.count %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% @tweet.errors.full_messages.each do |message| %>
              <div class="alert alert-danger">
                <%= message %>
              </div>
            <% end %>

            <!-- form_forをこの位置に作ってもらう -->
            <%= form_for @tweet do |f|%>
              <div class="form-group new-tweet">
              <!-- formヘルパー作る -->
                <%=f.text_area :content, class: "form-control"%>
                <%=f.submit "つぶやく", class: "btn btn-success"%>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-8 right-content">
        <% if notice %>
          <div class="alert alert-info">
            <%= notice %>
          </div>
        <% end %>
        <div class="list-group">
        <!-- この下にeach使ってツイート一覧だす -->
          <% @tweets.each do |t|%>
            <div class="list-group-item">
              <h4 class="user">
                <span class="user-name">
                <!-- emailの表示 -->
                  <%= t.user.email %>
                </span>
                <span class="time pull-right">
                  <%= distance_of_time_in_words_to_now(t.created_at)%>
                </span>
              <div class="clear"></div>
              </h4>
              <div class="tweet-content">
                <p>
              <!-- ツイートのcontentの表示 -->
                  <%= t.content %>
                </p>
                <div class="content-footer">
                <!-- 優秀者用 -->
                  <% if t.favorited_by? current_user %>
                  <!-- 優秀者用 -->
                    <%= link_to "お気に入りの解除", tweet_favorites_path(t), method: :delete %>
                  <% else %>
                  <!-- 優秀者用 -->
                    <%= link_to "お気に入りの登録", tweet_favorites_path(t), method: :post %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <!-- each終わり -->
      </div>
    </div>
  </div>
</div>