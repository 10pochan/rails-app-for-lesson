<div id="tweets-content">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 left-content">

      <!-- singed_in?を使ってログインした人しか見れないようにしましょう -->
        <% if signed_in? %>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="user">
                <span class="user-name">
                <!-- この下にcurrent_userのemailを表示しよう -->
                  <%= current_user.email %>
                </span>
              </div>
                
              <div class="user-activity">
                <div class="row">
                  <div class="col-xs-12 tweets-num">
                    <div class="text">
                      つぶやき
                    </div>
                    <div class="num">
                      <!-- countを使ってcurrent_userのツイートの数を出しましょう -->
                      <%= current_user.tweets.count %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- form_forを使ってつぶやくためのフォームを作る -->
            <%= form_for @tweet do |f|%>
              <div class="form-group new-tweet">
              <!-- formヘルパー作る -->
                <%=f.text_area :content, class: "form-control"%>
                <%=f.submit "つぶやく", class: "btn btn-success"%>
              </div>
            <% end %>
            <!-- form_forをendで閉じる -->
          </div>
        <% end %>
        <!-- signed_in?のif文をendで閉じる -->
      </div>
      <div class="col-xs-8 right-content">
        <div class="list-group">
        <!-- @tweetsにeachメソッドを用いてレコード一覧を表示しましょう -->
          <% @tweets.each do |t|%>
            <div class="list-group-item">
              <h4 class="user">
                <span class="user-name">
                <!-- ブロック変数を使ってツイートに紐付いたUserのemailの表示 -->
                  <%= t.user.email %>
                </span>
                <span class="time pull-right">
                  <%= distance_of_time_in_words_to_now(t.created_at)%>
                </span>
              <div class="clear"></div>
              </h4>
              <div class="tweet-content">
                <p>
              <!-- ツイートのcontentを表示しよう -->
                  <%= t.content %>
                </p>

                <!-- お気に入りボタンの実装（優秀者用） -->
                <div class="content-footer">
                <!-- 発展問題 -->
                <!-- favorited_by?を使ってif文でデータの状態によって表示するテキストを変えましょう -->
                  <% if t.favorited_by? current_user %>
                  <!-- 優秀者用発展問題 -->
                  <!-- お気に入り解除ボタンの設置 -->
                    <%= link_to "お気に入りの解除", tweet_favorites_path(t), method: :delete %>
                  <% else %>
                  <!-- 優秀者用発展問題 -->
                  <!-- お気に入り登録するボタンの設置 -->
                    <%= link_to "お気に入りの登録", tweet_favorites_path(t), method: :post %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <!-- each終わりendで閉じる -->
      </div>
    </div>
  </div>
</div>